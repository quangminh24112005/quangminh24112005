    </script>
</nav>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" id="breadcrumb">
    <ol class="breadcrumb">
        <% if (title !=='Home' ) { %>
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <% } %>
                <li class="breadcrumb-item active" aria-current="page">
                    <a href="<%= path %>">
                        <%= title %>
                    </a>
                </li>
    </ol>
</nav>

