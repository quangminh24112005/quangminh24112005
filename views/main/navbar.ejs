<!-- Navigation bar -->
<nav class="navbar navbar-expand-lg bg-white sticky-top navbar-light p-3 " id="navbar">
    <div class="container">
        <!-- For mobile view -->
        <a class="navbar-brand" href="/"><i class="fa-solid fa-shop me-2"></i> <img src="images/binanceLogo.png"
                width="40px" alt=""></a>
        <div class="mx-auto my-3 d-lg-none d-sm-block d-xs-block">
            <div class="input-group">
                <span class="border-warning input-group-text bg-warning text-white"><i
                        class="fa-solid fa-magnifying-glass"></i></span>
                <input type="text" class="form-control border-warning searchInput" style="color:#7a7a7a" id="searchBar"
